@model UsuariosModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Argon</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarColor02">
    <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Projetos" asp-action="Index">Projetos</a>
        </li>
        @if (Model.Perfil == Argon.Enums.PerfilEnum.ADMINISTRADOR)
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Empresas" asp-action="Index">Empresas</a>
            </li>
        }

        <li class="nav-item dropdown text-end" >
            <a class="nav-link dropdown-toggle text-end" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @Model.Nome
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="" asp-controller="Perfil" asp-action="Index">Perfil</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a></li>
            </ul>
        </li>
    </ul>
    <form class="d-flex">
        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>