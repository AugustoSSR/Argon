@model List<EmpresasModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Lista de empresas";
}




<div class="text-center">

    <br />
    <h1>Lista de empresas</h1>
    <p>Todas as empresas cadastradas no sistema.</p>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" role="button" asp-controller="Empresas" asp-action="Adicionar"><i class="bi bi-pencil-square"></i> &nbsp;Adicionar</a>
    </div>
    <br />
    <table class="table table-hover" id="empresasTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Cidade</th>
                <th scope="col">Telefone</th>
                <th scope="col">E-mail</th>
                <th scope="col">Data de cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (EmpresasModel empresas in Model)
                {
                    <tr>
                        <th scope="row">@empresas.Id</th>
                        <td>@empresas.Nome</td>
                        <td>@empresas.CNPJ</td>
                        <td>@empresas.Cidade</td>
                        <td>@empresas.Telefone</td>
                        <td>@empresas.Email</td>
                        <td>@empresas.dataCadastro</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-caret-right-square-fill"></i> &nbsp;Ações</button>
                                    <ul class="dropdown-menu">
                                        <li><a role="button" class="dropdown-item" asp-route-id="@empresas.Id" asp-controller="Projetos" asp-action="Editar"><i class="bi bi-gear"></i> &nbsp;Editar</a></li>
                                        <li><a role="button" class=" dropdown-item" href="#"><i class="bi bi-arrow-repeat"></i> &nbsp;Copiar</a></li>
                                        <li><a role="button" class=" dropdown-item" asp-route-id="@empresas.Id" asp-controller="Projetos" asp-action="ApagarConfirmacao"><i class="bi bi-trash3"></i> &nbsp;Apagar</a></li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td valign="top" colspan="5">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>
