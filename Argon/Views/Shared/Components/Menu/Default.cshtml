<div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="~/img/brand/blue.png" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-secondary">Home</a></li>
            <li><a asp-area="" asp-controller="Projetos" asp-action="Index" class="nav-link px-2 link-dark">Projetos</a></li>
            <li><a asp-area="" asp-controller="Arquivos" asp-action="Index" class="nav-link px-2 link-dark">Arquivos</a></li>
            @if (Model.Perfil == Argon.Enums.PerfilEnum.ADMINISTRADOR){
                <li><a asp-area="" asp-controller="Usuarios" asp-action="Index" class="nav-link px-2 link-dark">Usuarios</a></li>
                <li><a asp-area="" asp-controller="Empresas" asp-action="Index" class="nav-link px-2 link-dark">Empresas</a></li>
                <li><a asp-area="" asp-controller="Engenheiros" asp-action="Index" class="nav-link px-2 link-dark">Engenheiros</a></li>
            }
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
            <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
        </form>

        <div class="dropdown text-end">
            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small">
                <li><a class="dropdown-item" href="#">New project...</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Settings</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Perfil" asp-action="Index">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sign out</a></li>
            </ul>
        </div>
    </div>
</div>