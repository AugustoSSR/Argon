@model ProjetoModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editar projeto";
}

<div class="text-center">

    <h1>Formulario de cadastro de projetos</h1>
    <p>Informe todos os dados dos campos obrigatorios para adicionar um projeto.</p>
    <br />
</div>

<form asp-controller="Projetos" asp-action="Editar" method="post">

    <div class="row">
        <div class="col mb-3 col-lg-2">
            <labal>Identificação</labal>
            <input type="text" asp-for="Id" class="form-control" disabled/>
        </div>
        <div class="col mb-3 col-lg-3">
            <labal>Data de criação</labal>
            <input type="text" asp-for="dataCadastro" class="form-control" disabled/>
        </div>
        <div class="col mb-3 col-lg-3">
            <labal >Ultima alteração</labal>
            <input type="text" asp-for="dataAlteracao" class="form-control" disabled />
        </div>
    </div>

    <div class="row">
        <div class="col mb-3">
            <input type="text" asp-for="Empresa" class="form-control">
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Tipo" class="form-control" placeholder="Tipo do projeto" aria-label="Tipo do projeto">
            @Html.ValidationMessageFor(x => x.Tipo)
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do projeto" aria-label="Nome do projeto">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Localidade" class="form-control" placeholder="Localidade" aria-label="Localidade">
            @Html.ValidationMessageFor(x => x.Localidade)
        </div>
    </div>
    <br />
    <div class="d-grid gap-2">
        <a class="btn btn-danger" asp-controller="Projetos" asp-action="Index" role="button">Voltar</a>
        <button type="submit" class="btn btn-block btn-success">Atualizar</button>
    </div>
</form>
