@model ProjetoModel;
@{
    ViewData["Title"] = "Projetos";
}

<div class="text-center">

    <h1>Formulario de cadastro de projetos</h1>
    <p>Informe todos os dados dos campos obrigatorios para adicionar um projeto.</p>
    <br />
</div>

<form asp-controller="Projetos" asp-action="Adicionar" method="post">

    <div class="row">
        <div class="col mb-3">
            <select class="form-select" asp-for="Empresa">
                <option selected></option>
                <option value="RJNET">RJNET</option>
                <option value="VIP TELECOM">VIP TELECOM</option>
                <option value="ELETRICTEL">ELETRICTEL</option>
                @Html.ValidationMessageFor(x => x.Empresa)
            </select>
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Tipo" class="form-control" placeholder="Tipo do projeto" aria-label="Tipo do projeto">
            @Html.ValidationMessageFor(x => x.Tipo)
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do projeto" aria-label="Nome do projeto">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="col mb-3">
            <input type="text" asp-for="Localidade" class="form-control" placeholder="Localidade" aria-label="Localidade">
            @Html.ValidationMessageFor(x => x.Localidade)
        </div>
    </div>
    <br />
    <div class="d-grid gap-2">
        <a class="btn btn-danger" asp-controller="Projetos" asp-action="Index" role="button">Voltar</a>
        <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
    </div>
</form>
