@model List<UsuariosModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Lista de usuarios";
}
<div class="text-center">

    <br />
    <h1>Lista de usuarios</h1>
    <p>Lista completa com todos os usuarios.</p>
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-success" role="button" asp-controller="Usuarios" asp-action="Adicionar">Adicionar</a>
    </div>
    <br />
    <table class="table" id="usuariosTable">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (UsuariosModel usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Perfil</td>
                        <td>@usuario.dataCadastro</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Ações</button>
                                    <ul class="dropdown-menu">
                                        <li><a role="button" class="dropdown-item" asp-route-id="@usuario.Id" asp-controller="Usuarios" asp-action="Editar">Editar</a></li>
                                        <li><a role="button" class=" dropdown-item" href="#">Copiar</a></li>
                                        <li><a role="button" class=" dropdown-item" asp-route-id="@usuario.Id" asp-controller="Usuarios" asp-action="ApagarConfirmacao">Apagar</a></li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center"><td valign="top" colspan="5">Nenhum contato encontrado</td></tr>
            }
        </tbody>
    </table>
</div>
