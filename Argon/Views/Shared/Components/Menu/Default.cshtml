<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Argon</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Projetos" asp-action="Index">Projetos</a>
        </li>
        @if (Model.Perfil == Argon.Enums.PerfilEnum.ADMINISTRADOR)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
            </li>
        }

        <li class="nav-item dropdown" >
            <a class="nav-link dropdown-toggle text-dark text-sm-end" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @Model.Nome
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="" asp-controller="Perfil" asp-action="Index">Perfil</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="RedefinirSenha" asp-action="Login">Esqueci minha senha</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a></li>
            </ul>
        </li>
    </ul>
</div>